APP_ENV=production
PORT=8000
DATABASE_URL=postgresql+psycopg://<user>:<password>@<host>:<port>/<database>

JWT_SECRET_KEY=replace-with-a-strong-random-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

SECURITY_STRICT_MODE=true
ARTIFACT_DOWNLOAD_MODE=signed
ARTIFACT_DOWNLOAD_TOKEN_TTL_SECONDS=300
PRESERVE_FAILED_UPLOADS=false

# Set these to your Railway volume mount path (recommended: /data)
UPLOAD_DIR=/data/uploads
ARTIFACT_DIR=/data/artifacts
CV_GENERATION_TRACE_DIR=/data/traces

DOCUMENT_INGESTOR_PREFERRED=fallback
DOCUMENT_OUTPUT_FORMATS=markdown,json
DOCUMENT_PDF_DO_OCR=false
DOCUMENT_OCR_AUTO_RETRY_ON_QUALITY_FAILURE=true
DOCUMENT_OCR_RETRY_MIN_TEXT_LENGTH=120

CV_GENERATION_PROVIDERS_CONFIG_PATH=config/llm/providers.yml
CV_GENERATION_PROFILES_CONFIG_PATH=config/llm/profiles.yml
CV_GENERATION_GRAPH_INDEX_CONFIG_PATH=config/graphs/index.yml
CV_GENERATION_PROMPTS_DIR=prompts
CV_GENERATION_MAX_JOB_DESCRIPTION_CHARS=12000

# Optional mail settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# Optional LLM provider keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
